@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model PeD.Views.Email.Captacao.AlteracaoPrazo

@{
    Layout = "_EmailBase";
}

@{
    var url = Configuration.GetValue<string>("Url");
}

@section Header
{
    A equipe de Suprimentos alterou a data máxima
    de envio de propostas para o projeto "@Model.Projeto"
}

<p>
    A equipe de suprimentos da Norte Energia alterou a data
    máxima de envio de propostas do projeto "@Model.Projeto" para @Model.Prazo.ToString("d")
</p>

@section Action
{
    <a href="@url/proposta/@Model.PropostaGuid" style="display: inline-block; background: linear-gradient(0deg,#07626a,#007984); color:#d3f1ee; border-radius: 10px; font-size: 22px; padding: 10px 32px; text-decoration: none; text-transform: uppercase;">Ver Projeto</a>
}