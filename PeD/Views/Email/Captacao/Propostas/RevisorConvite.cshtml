@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model PeD.Views.Email.Captacao.Propostas.RevisorConvite

@{
    Layout = "_EmailBase";
}
@{
    var url = Configuration.GetValue<string>("Url");
}

@section Header
{
    Você foi convidado a participar da Etapa de
    Refinamento da Proposta @Model.Fornecedor do
    Projeto "@Model.Captacao.Titulo"
}

<p>
    A etapa de Refinamento terá início hoje e, até o dia
    @Model.DataAlvo.ToString("d"), esta etapa terá que ser concluída. Por favor
    clique no link abaixo para mais detalhes:
</p>

@section Action
{
    <a href="@url/gestor/refinamento/proposta/@Model.PropostaGuid" style="display: inline-block; background: #042769; font-weight: bold; color:#FFF; border-radius: 4px; padding: 8px 16px; text-decoration: none; text-transform: uppercase;">
        Ver Proposta
    </a>
}