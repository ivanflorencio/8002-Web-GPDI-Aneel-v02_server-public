@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model PeD.Views.Email.Captacao.Propostas.IdentificacaoRiscos

@{
    Layout = "_EmailBase";
}
@{
    var url = Configuration.GetValue<string>("Url");
}

@section Header
{
    Existe um novo projeto preparado para Identificação de Riscos
}

<p>
    O projeto "@Model.Captacao.Titulo" está pronto para a etapa de
    Identificação de Riscos, clique no link abaixo para dar
    sequência.
</p>

@section Action
{
    <a href="@url/identificacao-riscos/pendente#@Model.Captacao.Id" style="display: inline-block; background: linear-gradient(0deg,#07626a,#007984); color:#d3f1ee; border-radius: 10px; font-size: 22px; padding: 10px 32px; text-decoration: none; text-transform: uppercase;">
        Ver Proposta
    </a>
}