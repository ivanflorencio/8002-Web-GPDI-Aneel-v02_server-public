@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model PeD.Views.Email.Captacao.Formalizacao
@{
    Layout = "_EmailBase";
}
@{
    var url = Configuration.GetValue<string>("Url");
}

@section Header
{
    Existe um novo projeto preparado para
    Aprovação e Formalização
}


<p>
    O projeto "@Model.Captacao.Titulo" está pronto para a etapa de
    Aprovação e Formalização, clique no link abaixo para dar
    sequência.
</p>

@section Action
{
    <a href="@url/formalizacao/pendente#@Model.Captacao.Id" style="display: inline-block; background: linear-gradient(0deg,#07626a,#007984); color:#d3f1ee; border-radius: 10px; font-size: 22px; padding: 10px 32px; text-decoration: none; text-transform: uppercase;">
        Ver Demanda
    </a>
}