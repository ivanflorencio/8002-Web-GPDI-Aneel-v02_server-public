@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model PeD.Views.Email.Captacao.NovaCaptacao
@{
    Layout = "_EmailBase";
}
@{
    var url = Configuration.GetValue<string>("Url");
}

@section Header
{
    Novo Projeto para Captação de Proposta no
    Mercado cadastrado
}

@section Action
{
    <a href="@url/captacoes/@Model.CaptacaoId" style="display: inline-block; background: linear-gradient(0deg,#07626a,#007984); color:#d3f1ee; border-radius: 10px; font-size: 22px; padding: 10px 32px; text-decoration: none; text-transform: uppercase;">
        Ver Demanda
    </a>
}

<p>
    O usuário @Model.Autor enviou a demanda "@Model.CaptacaoTitulo" para Captação de Propostas ao Mercado.
    Clique abaixo para mais detalhes.
</p>