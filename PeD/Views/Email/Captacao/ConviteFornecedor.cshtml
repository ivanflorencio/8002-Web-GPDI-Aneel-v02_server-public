@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@model PeD.Views.Email.Captacao.ConviteFornecedor

@{
    Layout = "_EmailBase";
}
@{
    var url = Configuration.GetValue<string>("Url");
}

@section Header
{
    Você foi convidado para participar de um novo
    projeto para a área de PDI da Norte Energia
}

@section Action
{
    <a href="@url/proposta/@Model.PropostaGuid" style="display: inline-block; background: #042769; font-weight: bold; color:#FFF; border-radius: 4px; padding: 8px 16px; text-decoration: none; text-transform: uppercase;">
        Ver Demanda
    </a>
}

<p>
    A Equipe de Suprimentos Norte Energia convida a @Model.Fornecedor
    para participar do processo de cotação e proposta do
    projeto "@Model.Projeto". Clique abaixo para mais
    detalhes.
</p>